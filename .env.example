# Gitea Configuration (use SAPIENS_ prefix to avoid conflict with Gitea reserved names)
SAPIENS_GITEA_URL=http://localhost:3000
SAPIENS_GITEA_TOKEN=your-gitea-api-token-here

# Repository Configuration
SAPIENS_REPO_OWNER=myorg
SAPIENS_REPO_NAME=myrepo

# Agent Configuration
SAPIENS_AGENT_TYPE=ollama  # Options: ollama, claude-local, claude-api, openai
SAPIENS_AGENT_MODEL=llama3.1:8b  # For Ollama: llama3.1:8b, codellama, mistral, etc.
SAPIENS_OLLAMA_URL=http://localhost:11434  # Ollama API URL
SAPIENS_CLAUDE_API_KEY=  # Required if using claude-api
SAPIENS_OPENAI_API_KEY=  # Required if using openai

# Workflow Configuration
SAPIENS_MAX_CONCURRENT=3
SAPIENS_BRANCHING_STRATEGY=per-agent  # Options: per-agent, shared

# Optional: Daemon polling interval (seconds)
SAPIENS_DAEMON_INTERVAL=60
