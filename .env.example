# Gitea Configuration (use BUILDER_ prefix to avoid conflict with Gitea reserved names)
BUILDER_GITEA_URL=http://localhost:3000
BUILDER_GITEA_TOKEN=your-gitea-api-token-here

# Repository Configuration
BUILDER_REPO_OWNER=myorg
BUILDER_REPO_NAME=myrepo

# Agent Configuration
BUILDER_AGENT_TYPE=ollama  # Options: ollama, claude-local, claude-api, openai
BUILDER_AGENT_MODEL=llama3.1:8b  # For Ollama: llama3.1:8b, codellama, mistral, etc.
BUILDER_OLLAMA_URL=http://localhost:11434  # Ollama API URL
BUILDER_CLAUDE_API_KEY=  # Required if using claude-api
BUILDER_OPENAI_API_KEY=  # Required if using openai

# Workflow Configuration
BUILDER_MAX_CONCURRENT=3
BUILDER_BRANCHING_STRATEGY=per-agent  # Options: per-agent, shared

# Optional: Daemon polling interval (seconds)
BUILDER_DAEMON_INTERVAL=60
